{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@book-store/ui/dashboard": ["libs/ui/dashboard/src/index.ts"],
      "@book-store/util/reusable": ["libs/util/reusable/src/index.ts"],
      "@book-store/services": ["libs/services/src/index.ts"],
      "@book-store/store-management": ["libs/store-management/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
